<!DOCTYPE html>
<html>
  <head>
    <title>School</title>
    <%= csrf_meta_tags %>

    <!-- Bootstrap 3 -->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <div class="locale-links">
        <%= link_to image_tag('subjects/english.png', size: '50x50'), '?locale=en', class: 'right' %>
        <%= link_to image_tag('subjects/ukrainian.png', size: '50x50'), '?locale=ua', class: 'right'  %>

        <% if user_signed_in? %>
          <%= link_to image_tag('exit.png', size: '47x47'), destroy_user_session_path, method: :delete, class: 'right' %>
        <% else %>
          <%= link_to image_tag('plus.png', size: '47x47'), new_user_session_path, class: 'right' %>
        <% end %>
      </div>
      <h1 class="header-title">
        <%= link_to 'School', root_path, class: 'header-link'%>
      </h1>
      <div class="btn-group btn-group-justified" id="nav_row" role="group">
        <%= link_to 'Home', root_path, class: 'btn btn-danger' %>
        <%= link_to 'Courses', '#', class: 'btn btn-danger' %>
        <%= link_to 'Hometasks', '#', class: 'btn btn-danger' %>
        <%= link_to 'Group', '#', class: 'btn btn-danger' %>
        <%= link_to 'Subjects', '#', class: 'btn btn-danger' %>
        <%= link_to 'Teachers', '#', class: 'btn btn-danger' %>
        <%= link_to 'About us', '#', class: 'btn btn-danger' %>
      </div>
    </header>

    <main class="main container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </main>

    <footer class="footer">
      <span>All rights reserved &copy; 2018</span>
    </footer>
  </body>
</html>
