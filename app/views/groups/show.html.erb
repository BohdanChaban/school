<% @title = "#{@group.number}-#{@group.parallel}" || '' %>
<h1> <%= t('activerecord.models.group.one') %> <%= @title %> </h1>
<table>
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.user.name') %> </th>
      <th> <%= t('activerecord.attributes.user.surname') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group.users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.surname %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('devise.shared.links.back'), groups_path %>
