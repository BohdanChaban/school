<% @title = t('activerecord.models.teacher.other') %>
<h3> <%= @title %> </h3>
<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.user.surname') %> </th>
      <th> <%= t('activerecord.attributes.user.name') %> </th>
      <th> <%= t('activerecord.models.subject.other') %> </th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.surname %></td>
        <td><%= teacher.name %></td>
        <td>
          <ul>
            <%- teacher.subjects.uniq.each do |subject| %>
              <li><%= t("subjects.#{subject.name}") %></li>
            <%- end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
