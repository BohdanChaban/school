<% @title = t('activerecord.models.teacher.other') %>
<h1> <%= @title %> </h1>
<table>
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.user.name') %> </th>
      <th> <%= t('activerecord.attributes.user.surname') %> </th>
      <th> <%= t('activerecord.models.subject.other') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.name %></td>
        <td><%= teacher.surname %></td>
        <!-- <td><%= teacher.subjects.each {|subject| subject.to_s } %></td> -->
        <td>
          <%- teacher.subjects.each do |subject| %>
            <%= t("subjects.#{subject.name}") %>
          <%- end %>
        </td>
        <!-- <td><%= t("subjects.#{teacher.subjects.first.name}") %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>
