<h1>
  <%= "#{@course.group.number}-#{@course.group.parallel}" %>
</h1>

<table>
  <thead>
    <tr>
      <th> <%= t('activerecord.attributes.user.name') %> </th>
      <th> <%= t('activerecord.attributes.user.surname') %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @course.group.users.each do |student| %>
        <td>
          <a href=<%= group_path @course.group.id %> >
            <%= "#{student.name}" %>
          </a>
        </td>
        <td>
          <a href=<%= group_path @course.group.id %> >
            <%= "#{student.surname}" %>
          </a>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
