<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="1"></th>
      <%= @themes.inspect %>
      <% @themes.each do |theme| %>
        <th> <%= theme.id %> </th>
      <% end %>
      <th> New theme </th>
    </tr>
    <tr>
      <th class="col-md-2"> Student<%#= t('activerecord.attributes.user.name') %> </th>
      <% @themes.each do |theme| %>
        <th> New lesson </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @course.group.users.each do |student| %>
      <tr>
        <td class="col-md-2">
          <%= "#{student.name}" %> <%= "#{student.surname}" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
