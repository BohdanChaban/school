<% @title = t('activerecord.models.course.other') %>
<h1><%= @title %></h1>
<table class="course-table">
  <tbody>
    <% @courses.in_groups_of(4).each do |group| %>
      <tr class="row">
        <% group.each do |course| %>
        <td class="course-item col-md-3">
          <% if course %>
          <div class="course-name">
            <%= t("subjects.#{course.subject.name}") %>
          </div>
          <%= "#{course.group.number}#{course.group.parallel}" %> <br>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
